<Page x:Class="WpfApp3.Pages.Avtoriz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Avtoriz">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="login" Width="100"/>
                <TextBox Width="100" x:Name="LoginTB"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Pass" Width="100"/>
                <PasswordBox x:Name="PassTB" Width="100"/>
            </StackPanel>
            <Button Name="logInBTN" Content="Log In" Click="logInBTN_Click"/>
            <Button x:Name="GostBTN" Content=" Gost" Click="GostBTN_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
